#tooltip
	padding 6px
	color #555
	font-size 0.8em
	position absolute
	border-radius 6px
	border 1px solid #bbb
	background rgba(200, 200, 200, 0.4)

#tooltip.tooltip-ship
	width 320px
	min-height 160px
	padding 12px
	background #f0f0f0
	border-radius 4px
	border 1px solid #e0e0e0
	table
		padding 6px
		td
			padding 6px
		td.label
			font-weight 600
		tr:nth-child(2n+1) td
			background #e9e9e9

#tooltip.tooltip-ship
	.arrow
		display block
		width 24px
		height 13px
		margin 0 0 0 -12px
		position absolute
		bottom -12px
		left 50%
		background url(../img/tooltip-arrow.png)