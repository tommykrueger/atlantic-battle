#home-list
	width 960px
	li
		width 30%
		margin 0 4% 0 0
		display inline-block
		*zoom 1
		*display inline
		vertical-align top
	li:last-child
		margin 0
	li p
		font-size 1.2em
		line-height 1.5em
	li img 
		width 100%

ul#navigation
	width 100%
	margin 32px 0 0 0
	padding 12px
	border-radius 12px
	background rgba(128, 128, 128, 0.05)
	li
		width 33%
		display inline-block
		text-align center
	li:first-child
		text-align left
	li:last-child
		text-align right
	a.btn
		margin 0 auto
		padding 6px 12px
		text-shadow #fff 0 1px 1px
		display inline-block
		border-radius 6px
		background rgba(128, 128, 128, 0.05)
		border 1px solid #f0f0f0
		border-bottom 1px solid #d9d9d9
		border-right 1px solid #d9d9d9
		transition all 250ms ease-in-out
	a.btn:hover
		background rgba(128, 128, 128, 0.15)
	a.start-btn
		padding 6px 32px