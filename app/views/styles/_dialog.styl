.dialog
	width 560px
	height 400px
	margin -200px 0 0 -280px
	padding 24px
	position absolute
	top 50%
	left 50%
	background rgba(200, 200, 200, 0.6)
	border 1px solid #e0e0e0
	z-index 99

.dialog-header
	display block
	.close-dialog-btn
		width 24px
		height 24px
		display block
		position absolute
		top 12px
		right 12px
		font-size 1.2em
		line-height 24px
		text-align center
		cursor pointer
		background #888
		border 1px solid #aaa
		border-radius 4px 
	.close-dialog-btn:hover
		background #666

.dialog-content
	display block
	h2
		margin 12px 0
		font-size 2em
	p
		font-size 1.2em
		line-height 26px


.dialog-footer
	width 91%
	display block
	text-align center
	position absolute
	bottom 24px



	.form-btn
		width auto
		min-width 100px
		display inline-block
		padding 6px 12px
		color #f0f0f0
		text-align center
		text-decoration none
		cursor pointer
		border-radius 3px
		border 1px solid rgba(0, 0, 0, 0.25)
		box-shadow 0px 1px 3px rgba(0, 0, 0, 0.25)
		z-index 999
	.form-btn.submit-btn:hover
		border 1px solid rgba(0, 0, 0, 0.50)
	.form-btn.submit-btn
		background brown
