.event
	margin 6px
	padding 12px
	display block
	border 1px solid #212121
	border-radius 6px
	background #3f3f3f
	.close-btn
		width 16px
		height 16px
		float right
		display block
		font-size 1.4em
		cursor pointer

	.event-title
		width 90%
		margin: 0 0 6px 0;
		color: #f0f0f0;
		font-size: 1.4em;
		display: block;
	.event-date
		margin: 0 0 6px 0;
		color: #c0c0c0;
		font-size: 1.1em;
		display: block;
	.event-description
		margin: 0 0 6px 0;
		color: #f0f0f0;
		font-size: 1.1em;
		display: block;

	.event-footer
		padding 6px 0 0 0
		text-align right
		.show-on-map-btn
			padding 6px
			color #f0f0f0
			cursor pointer
			border-radius 4px
			border 1px solid #333
		.show-on-map-btn:hover
			background #900000